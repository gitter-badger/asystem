body
  font-family "Helvetica Neue Light", "HelveticaNeue-Light", "Helvetica Neue", Calibri, Helvetica, Arial, sans-serif
.sort
nav
  position relative
#container
  position relative
  width 71%
  margin 0 auto
.search
  width 250px
  display inline
.add_product
  z-index 2
  position absolute;
  padding 8px 20px
  left 30%
  background #eeeeee
  width 520px
  border-radius 7px
  box-shadow 0 0 25px - 5px rgba(11, 29, 66, 0.3)
.id
  border 1px solid #DDD;
.my_nac
  position absolute
  top 12px
  right 11%
.table-scrollable
  max-height 580px
  overflow-y scroll
  margin-top 65px
.products_list
  overflow-y scroll
  width 600px
  height 520px
  ul
    margin 10px 0
    li
      margin 10px 0

.error
  font-size 14px
  color red

.sort
  a
    &:hover
      cursor pointer
a
  &:hover
    text-decoration none
h3.title
    text-align center